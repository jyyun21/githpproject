		<pattern>/board/*</pattern>
	</decorator>
	<excludes>
		<pattern>/board/fileUploadForm.do?category=free</pattern> <!-- exclude.jsp놈은 보여주지 말아라 -->
		<pattern>/board/fileUploadForm.do?category=humor</pattern> <!-- exclude.jsp놈은 보여주지 말아라 -->
		<pattern>/member/*</pattern>
		<pattern>/boardReportForm.jsp</pattern>
	</excludes>
</decorators>